<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/simple_viewmodel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Simple ViewModel Activity"
        app:layout_constraintBottom_toTopOf="@id/livedata_viewmodel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/livedata_viewmodel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="LiveData ViewModel Activity"
        app:layout_constraintBottom_toTopOf="@id/observer_viewmodel"
        app:layout_constraintTop_toBottomOf="@id/simple_viewmodel" />

    <Button
        android:id="@+id/observer_viewmodel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Observer ViewModel Activity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/livedata_viewmodel" />


</androidx.constraintlayout.widget.ConstraintLayout>